{
  "name": "test-project",
  "version": "1.0.0",
  "description": "Test project on aqa course",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "pretest": "npm run build",
    "test": "npx mocha src/tests/**/*.test.ts",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc src/**/*.ts --write",
    "precommit": "npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint",
      "pre-push": "npm run prettier-format && npm run lint"
    }
  },
  "keywords": [
    "typescript",
    "javascript",
    "qa",
    "automation"
  ],
  "author": "Anatoly Karpovich",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "chai": "^4.3.7",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
